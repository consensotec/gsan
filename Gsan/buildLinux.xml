				<include name="**/*" />
				<exclude name="html" />
			</fileset>
		</copy>
		<copy todir="${nomeWAR}/WEB-INF/classes">
			<fileset dir="${dest}">
				<include name="gcom/**/*.*" />
			</fileset>
			<fileset dir="src/gcom/properties">
				<include name="*.properties" />
			</fileset>
			<fileset dir="reports">
