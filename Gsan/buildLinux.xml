		<copy todir="${nomeEAR}/META-INF">
			<fileset dir="META-INF">
				<include name="application.xml" />
			</fileset>
		</copy>
	</target>

	<target name="resource">
		<copy todir="${dest}">
			<fileset dir="${src}">
				<include name="**/*.au" />
				<include name="**/*.midi" />
				<include name="**/*.gif" />
