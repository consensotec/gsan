<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
    <enterprise-beans>
        <session>
            <display-name>ControladorAcessoGCOM</display-name>
            <ejb-name>ControladorAcessoGCOM</ejb-name>
            <local-home>gcom.seguranca.acesso.ControladorAcessoLocalHome</local-home>
            <local>gcom.seguranca.acesso.ControladorAcessoLocal</local>
            <ejb-class>gcom.seguranca.acesso.ControladorAcessoSEJB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>ControladorAcessoGCOM</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
			<method>
			    <ejb-name>ControladorAcessoGCOM</ejb-name>
			    <method-name>registrarFuncionalidadeAcessada</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
	    </container-transaction>
    </assembly-descriptor>
</ejb-jar>